{
  "name": "next-roots",
  "version": "0.0.1",
  "description": "Utility to handle internationalized routing for Next.js app folder.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "index.d.ts",
    "index.js"
  ],
  "bin": {
    "roots": "./dist/cli.js"
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "rm -rf dist > /dev/null",
    "build": "yarn clean && yarn check:types && node esbuild.mjs",
    "format": "pretty-quick",
    "lint": "eslint --fix --ext .js,.ts,.tsx src/",
    "test": "vitest",
    "test:coverage": "yarn test --coverage",
    "check:types": "yarn tsc --noEmit",
    "prepublish": "yarn clean && yarn test && yarn build",
    "publish:canary": "yarn publish --tag canary"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@vitest/coverage-c8": "^0.28.5",
    "arg": "^5.0.2",
    "colors": "^1.4.0",
    "esbuild": "^0.17.5",
    "esbuild-node-externals": "^1.6.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "path-to-regexp": "^6.2.1",
    "prettier": "^2.8.3",
    "pretty-quick": "^3.1.3",
    "resolve-pkg": "^2.0.0",
    "typescript": "^4.9.5",
    "vite-tsconfig-paths": "^4.0.5",
    "vitest": "^0.28.5"
  },
  "peerDependencies": {
    "path-to-regexp": "^6.2.1"
  },
  "license": "MIT",
  "keywords": [
    "next.js",
    "i18n",
    "routes",
    "locale",
    "internationalization",
    "localization",
    "localized",
    "react",
    "next",
    "nextjs"
  ],
  "author": {
    "name": "Jirka Svoboda",
    "email": "svobik7@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/svobik7/next-roots"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
