{
  "compilerOptions": {
    "target": "ESNext",
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext"
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "dist"]
}
